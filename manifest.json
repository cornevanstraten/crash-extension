{
  "manifest_version": 2,
  "name": "Crash pitch tool (beta)",
  "description": "Pitch any job you find on the web using Crash.co",
  "version": "0.1.0",
  "icons": { "128": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
